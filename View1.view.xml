<mvc:View controllerName="com.sap.ui5.training.destination.test.destination_test.controller.View1" xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" displayBlock="true" xmlns="sap.m"
	xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	
	<App id="app">
		<pages>
			<Page id="mainPage" title="{i18n>Frontend Hero Alex}">
				<content>
					<Text id="helloWorldText" text="{view1Model>/helloWorldText/text}"/>
					<f:SimpleForm id="simpleForm" editable="true" class="sapUiResponsiveMargin" width="auto">
						<f:content>
							<!--<HBox class="sapUIResponsiveMargin" width="auto">-->
							<Label id="statusLabel" text="{view1Model>/supplierComboBox/labelText}" labelFor="supplierComboBox"/>
							<ComboBox id="supplierComboBox" change="onSelectionChange" items="{ path: 'odatamodel>/Suppliers' , sorter: { path: 'odatamodel>CompanyName' } }">
								<!--<core:Item key="{view1Model>key}" text="{view1Model>key}-{view1Model>value}"/>-->
								<core:Item key="{odatamodel>SupplierID}" text="{odatamodel>SupplierID}-{odatamodel>CompanyName}"/>
							</ComboBox>
						</f:content>
					</f:SimpleForm>
					<!--<Button id="myButton" text="click me" app:mydata="textnou" press="onMyButtonPress"/>-->
					<!--</HBox>-->
					<!--items="{view1Model>/table1/items}" -->
					<Table id="table1" items="{odatamodel>/Products}" width="auto" growing="true" growingThreshold="10"
						class="sapUiForceWidthAuto sapUiMediumMarginBeginEnd">
						<!-- 	<Table id="table1" items="{view1Model>/table1/items}" width="auto" growing="true" growingThreshold="10"-->
						<!--class="sapUiForceWidthAuto sapUiMediumMarginBeginEnd">-->
						<headerToolbar>
							<OverflowToolbar id="otbSubheader">
								<Title text="Products" level="H2"/>
								<ToolbarSpacer/>
								<Button id="loadButton" text="Load Data" type="Emphasized" press="onLoadData"/>
							</OverflowToolbar>
						</headerToolbar>
						<columns>
							<Column>
								<Text text="Product"/>
							</Column>
							<Column minScreenWidth="Tablet" demandPopin="true">
								<Text text="Price"/>
							</Column>
							<Column minScreenWidth="Tablet" demandPopin="true">
								<Text text="Currency"/>
							</Column>
							<Column minScreenWidth="Tablet" demandPopin="true">
								<Text text="Info"/>
							</Column>
						</columns>
						<items>
							<ColumnListItem>
								<cells>
									<!--<Text text="{view1Model>name}"/>-->
									<!--<Text text="{view1Model>price}"/>-->
									<!--<Text text="{view1Model>currency}"/>-->
									<Text text="{odatamodel>ProductName}"/>
									<Text text="{odatamodel>UnitPrice}"/>
									<Text text=" "/>
									<Text text="{ formatter : '.customFormatter', parts: [{path : 'odatamodel>UnitsInStock'}, {path : 'odatamodel>UnitsOnOrder' } ]}"/>
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>
